{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react-jsx",
    "sourceMap": true,
    "target": "ES2021",
    "paths": {
      "/src/*": ["./src/*"]
    },
    "lib": ["DOM", "ES2021"]
  },
  "include": [
    "src/**/*"
  ]
}
