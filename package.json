{
  "name": "automatarium",
  "description": "A place for your automata",
  "repository": "git@github.com:GRA0007/automatarium.git",
  "contributors": [
    "Maxwell Reid (https://maxwellreid.tech/)",
    "Thomas Dib (https://tdib.xyz/)",
    "Ewan Breakey (https://ewanb.me/)",
    "Benji Grant (https://bengrant.dev/)",
    "Timothy Tran"
  ],
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "watch:simulation": "yarn workspace @automatarium/simulation watch",
    "watch:jflap-translator": "yarn workspace @automatarium/jflap-translator watch",
    "build:simulation": "yarn workspace @automatarium/simulation build",
    "build:jflap-translator": "yarn workspace @automatarium/jflap-translator build",
    "watch:packages": "concurrently \"yarn watch:simulation -p 1235\" \"yarn watch:jflap-translator -p 1236\"",
    "build:packages": "yarn build:simulation && yarn build:jflap-translator",
    "dev:frontend": "concurrently \"yarn watch:packages\" \"yarn workspace frontend start\"",
    "dev:backend": "yarn workspace backend dev",
    "build:frontend": "yarn workspace frontend build",
    "build:backend": "yarn workspace backend build",
    
    "lint:frontend": "yarn workspace frontend lint",
    "lint:backend": "yarn workspace backend lint",
    "lint:simulation": "yarn workspace @automatarium/simulation lint",
    "lint:frontend:fix": "yarn workspace frontend lint:fix",
    "lint:backend:fix": "yarn workspace backend lint:fix",
    "lint:simulation:fix": "yarn workspace @automatarium/simulation lint:fix",
    "lint": "yarn lint:backend && yarn lint:frontend && yarn lint:simulation",
    "lint:fix": "yarn lint:backend:fix && yarn lint:frontend:fix && yarn lint:simulation:fix",
    
    "test": "yarn workspace @automatarium/simulation test",
    "dev": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\"",
    "build": "yarn build:packages && yarn build:backend && yarn build:frontend"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "parcel-bundler": "^1.12.5"
  }
}
