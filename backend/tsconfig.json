{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                  
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      // TODO Pending Structure : "@[location/*]: ["./src/[path]]
    }
  }
}
